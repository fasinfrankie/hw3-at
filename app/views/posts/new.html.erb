<h1>Add a New Post</h1>

<%= form_with model: @post do |form| %>
  <p>
    <%= form.label "Title" %>
    <%= form.text_field "title" %>
    <%= form.label "date posted" %>
    <%= form.text_field "date posted" %>
    <%= form.label "description" %>
    <%= form.text_field "description" %>
  </p>
  <p>
    <%= form.hidden_field "place_id" %>
  </p>
  <%= form.submit %>
<% end %>